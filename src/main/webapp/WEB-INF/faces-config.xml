<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_3.xsd" version="2.3">

    <application>
        <!-- ダイアログで他画面を表示するため -->
        <action-listener>org.primefaces.application.DialogActionListener</action-listener>
        <navigation-handler>org.primefaces.application.DialogNavigationHandler</navigation-handler>
        <view-handler>org.primefaces.application.DialogViewHandler</view-handler>

        <locale-config>
            <default-locale>ja</default-locale>
        </locale-config>

        <resource-bundle>
            <base-name>ValidationMessages</base-name>
            <var>messages</var>
        </resource-bundle>

        <resource-bundle>
            <base-name>view-items</base-name>
            <var>viewItems</var>
        </resource-bundle>

        <message-bundle>CustomJsfValidationMessages</message-bundle>
    </application>

    <lifecycle>
        <phase-listener>listener.InvokeApplicationLisener</phase-listener>
        <phase-listener>listener.BrowserCacheInvalidationListener</phase-listener>
    </lifecycle>

    <factory>
        <exception-handler-factory>exception.CustomExceptionHandlerFactory</exception-handler-factory>
    </factory>

    <!-- GETに対するトークンチェック対象のページ（正規表現は使えない） -->
    <!-- <protected-views> -->
    <!-- <url-pattern>/application/signup.xhtml</url-pattern> -->
    <!-- </protected-views> -->
</faces-config>
